{
	"compilerOptions": {
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["esnext", "dom"],
		"module": "commonjs",
		"noEmitHelpers": true,
		"outDir": "dist",
		"preserveWatchOutput": true,
		"sourceMap": true,
		"target": "es5"
	},
	"exclude": ["node_modules", "dist"],
	"include": ["types/**/*.d.ts", "src/**/*.ts", "src/**/*.vue"]
}
